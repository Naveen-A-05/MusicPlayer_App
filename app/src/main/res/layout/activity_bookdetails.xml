        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/lefticon">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="end">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/search">

                    </ImageView>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/educate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:layout_width="467dp"
                android:layout_height="wrap_content"
                android:src="@drawable/educated"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_blue"
                android:orientation="horizontal"
                android:padding="10dp"

                >


                <TextView
                    android:fontFamily="@font/fira_sans_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Play Trial"
                    android:textColor="@color/white"
                    android:textSize="25dp">


                </TextView>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/singleline">

                    </ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/playingnow"
                        android:fontFamily="@font/fira_sans_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play Now"
                        android:textColor="@color/white"
                        android:textSize="25dp"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addfav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/educate"
            android:layout_marginLeft="300dp"
            android:orientation="vertical"

            >

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/newfav">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/booktitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addfav">

            <TextView
                android:fontFamily="@font/fira_sans_semibold"
                android:textColor="@color/black"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title of the book"
                android:textAlignment="center"></TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/textcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/booktitle"
            android:padding="20dp">

            <TextView
                android:fontFamily="@font/fira_sans"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/booktitle"
                android:text="Written by: Author\n
Narrated by: Name\n
Duration: 23 hrs 30 mins
Released on: Date\n
Language: Type of Language\n
Publisher: Name of the Publisher\n
Categories: Category1, Category2\n
Ratings: 4.9 (out of) "
                android:textAlignment="textStart"></TextView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cart"
            android:layout_gravity="center"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/cartandplay"></ImageView>
        </LinearLayout>



        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/fira_sans_semibold"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publisher’s Summary"></TextView>

